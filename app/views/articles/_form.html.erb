<%= form_with model: @article do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <% article.errors.full_messages_for(:title).each do |error| %>
      <div><%= error %></div>
    <% end %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
    <% article.errors.full_messages_for(:body).each do |error|%>
      <div><%= error%></div>
    <% end %>
  </div>
  <div>
    <%= f.label :status %><br>
    <%= f.select :status, ['public', 'private', 'archived'], selected: 'public' %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>